<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="30dp"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="24dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="24dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/segoeuib"
            android:text="@string/food_details"
            android:textColor="@color/orange"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/foodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/segoeuib"
            android:text="Rice noodles"
            android:textColor="@color/darkGray"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/segoeuib"
            android:text="@string/why_it_s_superfood_for_you"
            android:textColor="@color/darkGray"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/fatCount" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/segoeuib"
            android:text="@string/not_allergish_nutrinions"
            android:textColor="#00AA0B"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/vaganAndVegetarianState" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/segoeuib"
            android:text="@string/allergish_nutritions"
            android:textColor="#E10000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/foodNotAllergensNutrinions" />

        <TextView
            android:id="@+id/vaganAndVegetarianState"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/little_rounded_bg"
            android:backgroundTint="@color/back_light_gray"
            android:drawableLeft="@drawable/green_circle"
            android:drawablePadding="20dp"
            android:fontFamily="@font/segoeui"
            android:padding="20dp"
            android:text="The rise noodles is for vegan and vegetarial. Also don't has a lot of fats"
            android:textColor="@color/gray"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <TextView
            android:id="@+id/foodNotAllergensNutrinions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/little_rounded_bg"
            android:backgroundTint="@color/back_light_gray"
            android:drawableLeft="@drawable/green_circle"
            android:drawablePadding="20dp"
            android:fontFamily="@font/segoeuisb"
            android:padding="20dp"
            android:text="The rise noodles is for vegan and vegetarial. Also don't has a lot of fats"
            android:textColor="#00AA0B"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/textView22" />

        <TextView
            android:id="@+id/foodAllergensNutrinions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/little_rounded_bg"
            android:backgroundTint="@color/back_light_gray"
            android:drawableLeft="@drawable/red_circle"
            android:drawablePadding="20dp"
            android:fontFamily="@font/segoeuisb"
            android:padding="20dp"
            android:text="The rise noodles is for vegan and vegetarial. Also don't has a lot of fats"
            android:textColor="#E10000"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/textView24" />

        <Space
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@+id/foodAllergensNutrinions" />

        <TextView
            android:id="@+id/caloriesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/segoeuib"
            android:text="384"
            android:textColor="@color/darkGray"
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="@+id/textView11"
            app:layout_constraintTop_toTopOf="@+id/textView11" />

        <TextView
            android:id="@+id/carbohydratesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/segoeuib"
            android:text="51.7g"
            android:textColor="@color/darkGray"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/textView15"
            app:layout_constraintTop_toTopOf="@+id/textView15" />

        <TextView
            android:id="@+id/proteinsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/segoeuib"
            android:text="16.2g"
            android:textColor="@color/darkGray"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/textView16"
            app:layout_constraintTop_toTopOf="@+id/textView16" />

        <TextView
            android:id="@+id/fatCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/segoeuib"
            android:text="10.8g"
            android:textColor="@color/darkGray"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/textView18"
            app:layout_constraintTop_toTopOf="@+id/textView18" />

        <TextView
            android:id="@+id/foodCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/segoeui"
            android:textColor="@color/gray"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/foodName" />

        <ImageView
            android:id="@+id/foodImage"
            android:layout_width="120dp"
            android:layout_height="240dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/camera"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/foodCategories" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="@color/gray"
            android:fontFamily="@font/segoeuib"
            android:text="kcal"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/foodImage"
            app:layout_constraintTop_toTopOf="@+id/foodImage" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/segoeuib"
            android:text="@string/cartohydrates"
            android:textColor="@color/gray"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintVertical_bias="0.533" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:fontFamily="@font/segoeuib"
            android:textColor="@color/gray"
            android:text="@string/proteins"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/view2"
            app:layout_constraintStart_toEndOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@+id/view2" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:fontFamily="@font/segoeuib"
            android:text="@string/fats"
            android:textColor="@color/gray"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/view3"
            app:layout_constraintStart_toEndOf="@+id/view3"
            app:layout_constraintTop_toTopOf="@+id/view3" />

        <View
            android:id="@+id/view"
            android:layout_width="28dp"
            android:layout_height="10dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/little_rounded_bg"
            android:backgroundTint="#8BC34A"
            app:layout_constraintStart_toStartOf="@+id/caloriesCount"
            app:layout_constraintTop_toBottomOf="@+id/caloriesCount" />

        <View
            android:id="@+id/view2"
            android:layout_width="28dp"
            android:layout_height="10dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/little_rounded_bg"
            android:backgroundTint="#C5DB00"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/carbohydratesCount" />

        <View
            android:id="@+id/view3"
            android:layout_width="28dp"
            android:layout_height="10dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/little_rounded_bg"
            android:backgroundTint="#BF0000"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/proteinsCount" />

        <TextView
            android:id="@+id/backToHomeButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_bg"
            android:backgroundTint="@color/orange"
            android:fontFamily="@font/segoeuisb"
            android:paddingStart="35dp"
            android:paddingTop="10dp"
            android:paddingEnd="35dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="30dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:text="@string/home"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toStartOf="@+id/scanAgainButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/space"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/foodAllergensNutrinions" />

        <TextView
            android:id="@+id/scanAgainButton"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_bg"
            android:backgroundTint="@color/back_light_gray"
            android:fontFamily="@font/segoeuisb"
            android:paddingStart="35dp"
            android:paddingTop="10dp"
            android:paddingEnd="35dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="30dp"
            android:text="@string/scan_again"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="40dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/darkGray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/backToHomeButton"
            app:layout_constraintTop_toBottomOf="@+id/foodAllergensNutrinions" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
